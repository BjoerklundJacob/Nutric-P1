{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\main.c",
                "${workspaceFolder}\\menu.c",
                "${workspaceFolder}\\settings.c",
                "${workspaceFolder}\\json_parser.c",
                "${workspaceFolder}\\json_structs.c",
                "${workspaceFolder}\\csv_nutrient_ranges.c",
                "${workspaceFolder}\\csv_nutrient_parser.c",
                "${workspaceFolder}\\nutrient_counter.c",
                "${workspaceFolder}\\output.c",
                "-ansi",
                "-pedantic",
                "-Wall"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}